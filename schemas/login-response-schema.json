{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "title": "Login Response Schema",
  "description": "Schema de resposta para endpoint de login",
  "properties": {
    "token": {
      "type": "string",
      "description": "JWT token de autenticação",
      "pattern": "^[A-Za-z0-9-._~+/]+=*$"
    },
    "user": {
      "type": "object",
      "properties": {
        "id": {
          "type": "integer"
        },
        "email": {
          "type": "string",
          "format": "email"
        },
        "name": {
          "type": "string"
        }
      },
      "required": ["id", "email"]
    }
  },
  "required": ["token"],
  "additionalProperties": false
}
